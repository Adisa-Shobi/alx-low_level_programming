# Makefile to compile school executable
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o : %.c
	${CC} -c -o $@ $<

# cleans temporary files and executable
clean:
	${RM} *~ school

# cleans object files
oclean:
	${RM} ${OBJ}

# cleans object files, source files, and temporary files
fclean: clean oclean

# Forces recompilation of all object files
re: oclean all
